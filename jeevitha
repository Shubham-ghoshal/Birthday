    <script>
        // Create floating particles
        function createParticles() {
            const particlesContainer = document.getElementById('particles');
            for (let i = 0; i < 40; i++) {
                const particle = document.createElement('div');
                particle.className = 'particle';
                particle.style.left = Math.random() * 100 + '%';
                particle.style.width = particle.style.height = (Math.random() * 4 + 2) + 'px';
                particle.style.setProperty('--drift', (Math.random() * 200 - 100) + 'px');
                particle.style.animationDuration = (Math.random() * 10 + 15) + 's';
                particle.style.animationDelay = Math.random() * 10 + 's';
                particlesContainer.appendChild(particle);
            }
        }

        // Create golden dust
        function createGoldenDust() {
            for (let i = 0; i < 30; i++) {
                const dust = document.createElement('div');
                dust.className = 'golden-dust';
                dust.style.left = Math.random() * 100 + '%';
                dust.style.setProperty('--dust-drift', (Math.random() * 100 - 50) + 'px');
                dust.style.animationDuration = (Math.random() * 8 + 12) + 's';
                dust.style.animationDelay = Math.random() * 15 + 's';
                document.body.appendChild(dust);
            }
        }

        // Animal interaction
        document.querySelectorAll('.animal-card').forEach(card => {
            card.addEventListener('click', function() {
                this.classList.add('celebrating');
                setTimeout(() => {
                    this.classList.remove('celebrating');
                }, 800);
            });
        });

        // Music control
        const musicControl = document.getElementById('musicControl');
        const birthdayMusic = document.getElementById('birthdayMusic');
        let isPlaying = false;

        musicControl.addEventListener('click', () => {
            if (isPlaying) {
                birthdayMusic.pause();
                musicControl.classList.remove('playing');
                musicControl.querySelector('.music-icon').textContent = '‚ô´';
            } else {
                birthdayMusic.play();
                musicControl.classList.add('playing');
                musicControl.querySelector('.music-icon').textContent = '‚ô™';
            }
            isPlaying = !isPlaying;
        });

        // Initialize on load
        window.addEventListener('load', () => {
            createParticles();
            createGoldenDust();
            
            // Try autoplay
            birthdayMusic.play().then(() => {
                musicControl.classList.add('playing');
                musicControl.querySelector('.music-icon').textContent = '‚ô™';
                isPlaying = true;
            }).catch(() => {
                console.log('Click the music button to start the celebration!');
            });
        });

        // Add sparkle effect on mouse move
        let sparkleTimeout;
        document.addEventListener('mousemove', (e) => {
            clearTimeout(sparkleTimeout);
            sparkleTimeout = setTimeout(() => {
                if (Math.random() > 0.7) {
                    const sparkle = document.createElement('div');
                    sparkle.className = 'golden-dust';
                    sparkle.style.left = e.clientX + 'px';
                    sparkle.style.top = e.clientY + 'px';
                    sparkle.style.position = 'fixed';
                    sparkle.style.animationDuration = '2s';
                    document.body.appendChild(sparkle);
                    setTimeout(() => sparkle.remove(), 2000);
                }
            }, 50);
        });
    </script>
</body>
